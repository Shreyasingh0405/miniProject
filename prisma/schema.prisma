// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  mobileNo Int
  password String
  email    String @unique
  status   Int
  role     Int
  image    String
}

model books {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  bookName   String
  authorName String
  desprition String
  summary    String
  coverPage  String
  status     Int
  userId     String @db.ObjectId
}

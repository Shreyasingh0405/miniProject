// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String
  mobileNo Int
  password String
  email    String  @unique
  status   Int
  role     Int
  image    String
  books    books[]
}

model books {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  bookName    String
  writerName String
  authorName  user   @relation(fields: [userId], references: [id])
  userId      String @db.ObjectId
  description String
  summary     String
  coverPage   String
  status      Int
}
